{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@prisma": ["generated/prisma"]
    },
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false
  },
  "include": ["src"]
}
